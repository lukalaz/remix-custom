generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "sqlite"
  url                  = "file:/var/data/sqlite.db"
  referentialIntegrity = "prisma"
}

model Post {
  slug            String   @id
  title           String
  markdown        String
  excerpt         String
  seo_title       String
  seo_description String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Project {
  slug            String   @id
  title           String
  markdown        String
  excerpt         String
  seo_title       String
  seo_description String
  technologies    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
